<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    tools:context="com.boco.dragbubbleview.MainActivity">

    <com.boco.dragbubbleview.DragBubbleView
        android:id="@+id/dragBubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:bubbleColor="#ff0000"
        app:bubbleRadius="10dp"
        app:text="99"
        app:textColor="#ffffff"
        app:textSize="12sp"/>


    <Button
        android:id="@+id/reCreateBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:text="reCreate"/>
</RelativeLayout>
